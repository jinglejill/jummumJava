<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/section_space"
        android:background="@drawable/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingTop="@dimen/padding_min"
        android:paddingRight="@dimen/padding"
        android:paddingBottom="@dimen/padding_min">


        <LinearLayout
            android:id="@+id/container_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingTop="@dimen/padding_min"
            android:paddingRight="@dimen/padding"
            android:paddingBottom="@dimen/padding_min"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_type"
                        style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="xxxx"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/tv_desc_type"
                        style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/padding_min"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="0"
                        android:textColor="@color/bg_opacity"
                        android:textSize="@dimen/text_view_size_big_long" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/image_view_type"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="@dimen/padding"
                    android:scaleType="fitXY" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingTop="@dimen/padding_min"
            android:paddingRight="@dimen/padding"
            android:paddingBottom="@dimen/padding_min">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="xxxx"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/tv_desc"
                        style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/padding_min"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="0"
                        android:textColor="@color/bg_opacity"
                        android:textSize="@dimen/text_view_size_big_long" />


                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/image_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:paddingLeft="@dimen/padding"
                android:scaleType="fitCenter" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/container_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingTop="@dimen/padding_min"
            android:paddingRight="@dimen/padding"
            android:paddingBottom="@dimen/padding_min"
            android:visibility="gone">


            <ImageView

                android:id="@+id/img_title_reward"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/selector_transformation"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_reward"
                        style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="dgfdgd"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_view_size_larng"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_desc_reward"
                        style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="dgfdgd"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_big"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/chefhat_green" />

                        <TextView
                            android:id="@+id/txt_point"
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding"
                            android:layout_marginRight="@dimen/padding"
                            android:textColor="@color/pass_btn_login"
                            android:textSize="@dimen/text_view_size_larng"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="points"
                            android:textColor="@color/pass_btn_login"
                            android:textSize="@dimen/text_view_size_larng"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_date"
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding"
                            android:layout_marginRight="0dp"
                            android:textColor="@color/pass_btn_login"
                            android:textSize="@dimen/text_view_size_larng"
                            android:textStyle="bold"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:background="?android:attr/listDivider"></View>

    </LinearLayout>


</LinearLayout>
