<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="8dp"
                >
                <ImageView
                    android:id="@+id/img_title"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="fitXY"/>
            </android.support.v7.widget.CardView>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/loading_size"
                android:layout_height="@dimen/loading_size"
                android:layout_centerInParent="true"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="3"
                    android:text="ddddddddddddd"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_view_size_larng"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <RelativeLayout
                        android:id="@+id/layout_qty_total"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/count">

                        <TextView
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:id="@+id/tv_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/padding"
                            android:text="0"
                            android:textColor="@color/ef_white"
                            android:textSize="@dimen/text_view_size_larng"/>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:textSize="@dimen/text_view_size_larng">

                <TextView
                    android:id="@+id/tv_totle"
                    style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="฿ 0"
                    android:layout_marginRight="@dimen/padding"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_view_size_big_long"/>


                <TextView
                    android:id="@+id/tv_totle_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                    android:layout_centerInParent="true"
                    android:text="฿ 0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_view_size_big_long"/>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginBottom="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        android:padding="@dimen/padding"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/img_title_f"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY" />

                <ProgressBar
                    android:id="@+id/progress_bar_f"
                    android:layout_width="25dp"
                    android:layout_height="@dimen/loading_size"
                    android:layout_centerInParent="true"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <RelativeLayout
                        android:id="@+id/layout_qty_total_f"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/count">

                        <TextView
                            android:id="@+id/tv_qty_f"
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/padding"
                            android:text="0"
                            android:textColor="@color/ef_white"
                            android:textSize="@dimen/text_view_size_larng" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_title_f"
                    style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="3"
                    android:text="ddddddddddddd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_view_size_larng"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:textSize="@dimen/text_view_size_larng"
                android:layout_marginBottom="@dimen/padding">

                <TextView
                    android:id="@+id/tv_totle_f"
                    style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="@dimen/padding"
                    android:text="฿ 0"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_view_size_big_long" />


                <TextView
                    android:id="@+id/tv_totle_dis_f"
                    style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:text="฿ 0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_view_size_big_long" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:background="?android:attr/listDivider"></View>

</RelativeLayout>






