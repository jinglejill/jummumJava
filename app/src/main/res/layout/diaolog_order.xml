<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/padding_big">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/padding"
            android:src="@drawable/jummumchef_lightgray"
            android:layout_gravity="center_horizontal"/>

        <TextView
            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:text="Oop!"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/icon_tab_size_big"/>

        <TextView
            android:id="@+id/txt_detail"
            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding"
            android:gravity="center"
            android:text="คุณสามารถเรียกพนักงานเพื่อสอบถามหรือแก้ไข ก่อนการยกเลิก หากคุณต้องการยกเลิก สามารถกดที่ปุ่มใช่"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/icon_tab_size" />


        <Button
            android:id="@+id/btn_yes"
            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding"
            android:background="@drawable/selector_button_login"
            android:text="ใช่"
            android:textSize="@dimen/text_view_size_larng"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_no"
            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding"
            android:background="@drawable/selector_button_corlor_primary"
            android:text="ไม่"
            android:textSize="@dimen/text_view_size_larng"
            android:textStyle="bold" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>