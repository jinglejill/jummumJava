<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.JummumCo.Jummum.Activity.LoginActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.WithoutActionBar.AppBarOverlay"
        android:visibility="gone">


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/jummumlaunchbg">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <LinearLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/check_green"/>

                        <ImageView
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/jm1" />


                        <TextView
                            android:id="@+id/tv_thx_msg"
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/pay_success"
                            android:textSize="@dimen/layout_size_bottom"
                            android:textStyle="bold"/>

                        <TextView
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/thankU"
                            android:textSize="@dimen/icon_tab_size"
                            android:textStyle="bold"/>


                        <Button
                            android:id="@+id/save_pic"

                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_tab_size"
                            android:layout_marginRight="@dimen/icon_tab_size"
                            android:layout_marginTop="@dimen/padding"
                            android:background="@drawable/selector_button_login"
                            android:text="@string/save_picture"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/icon_tab_size"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/save_pic_and_order_buffet"
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_tab_size"
                            android:layout_marginRight="@dimen/icon_tab_size"
                            android:layout_marginTop="@dimen/padding"
                            android:background="@drawable/selector_button_login"
                            android:text="บันทึกใบเสร็จ และสั่งบุฟเฟต์"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/icon_tab_size"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/order_buffet"
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/icon_tab_size"
                            android:layout_marginLeft="@dimen/icon_tab_size"
                            android:layout_marginRight="@dimen/icon_tab_size"
                            android:layout_marginTop="@dimen/padding"

                            android:background="@drawable/selector_button_login"
                            android:text="สั่งบุฟเฟต์"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/icon_tab_size"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/btn_finish"
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/icon_tab_size"
                            android:layout_marginTop="@dimen/icon_tab_size"
                            android:text="กลับสู่เมนูหลัก"
                            android:textSize="@dimen/icon_tab_size"
                            android:textStyle="bold"/>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout_lucky"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/jummumlaunchbg">

                        <TextView
                            android:id="@+id/tc_lucky_count"
                            style="@style/AppTheme.WithoutActionBar.TextViewWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/image_view"
                            android:text="xxxxxxxxx"
                            android:textSize="@dimen/text_view_size_big"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/image_view"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/padding_big"
                            android:src="@drawable/jummum_gift_box_pop" />
                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>




</android.support.constraint.ConstraintLayout>